<update id="edit" parameterType="com.itheima.pojo.CheckGroup">
    update t_checkgroup
    <set>
        <if test="name != null">
            name = #{name},
        </if>
        <if test="sex != null">
            sex = #{sex},
        </if>
        <if test="code != null">
            code = #{code},
        </if>
        <if test="helpCode != null">
            helpCode = #{helpCode},
        </if>
        <if test="attention != null">
            attention = #{attention},
        </if>
        <if test="remark != null">
            remark = #{remark},
        </if>
    </set>
    where id = #{id}
</update>